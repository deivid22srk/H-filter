<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H-filter"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnToggleVpn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start VPN" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Sources (one per line):"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etSources"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="https://example.com/hosts.txt"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnSaveAndRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save &amp; Refresh Hosts" />

</LinearLayout>
